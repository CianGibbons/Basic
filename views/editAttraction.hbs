<div class="container-fluid"> <!-- container for bs -->
    <div class="w-75 mx-auto"> <! width of 75% across all screen as well as being centered -->
        <div class="card">
            <div class="card-header">
                <h2>Edit an Attraction</h2>
            </div>
            ​<form class='form-edit-attraction'>
                <div class="form-editAttraction">
                    <h2 id='currentAttractionIndicator'>{{attraction.name}} - {{attraction.city}}</h2>
                    <div class="form-group row">

                        <label for='name' class="col-lg-0.5 col-form-label form-control-label ml-4">Name:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='name' type='text' value='{{attraction.name}}' name='name'
                                required>
                        </div>
                        ​
                        <label for='city' class="col-form-label form-control-label ml-2">City:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='city' type='text' value='{{attraction.city}}' name='city'
                                required>
                        </div>
                        ​
                        <label for='wikiSlug' class=" col-form-label form-control-label ml-2">Wiki Slug:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='wikiSlug' type='text' value='{{attraction.wikiSlug}}'
                                name='wikiSlug' >
                        </div>
                        ​
                    </div>
                    ​
                    <div class="form-group row">
                        ​
                        <label for='aType' class="col-lg-0.5 col-form-label form-control-label ml-4">Attraction
                            Type:</label>
                        <div class="col-lg-3">
                            <!-- <input class="form-control" id='aType' type='text' value='{{attraction.aType}}' name='aType'
                                required> -->
                        <select class="form-control" id='aType' name='aType' value='{{attraction.aType}}'>
                            <option value='All'>All</option>
                            <option value='Brewery'>Brewery</option>
                            <option value='Pub'>Pub</option>
                            <option value='Viewpoint'>Viewpoint</option>
                            <option value='Monument'>Monument</option>
                            <option value='Gallery'>Gallery</option>
                            <option value='Museum'>Museum</option>
                            <option value='Beach'>Beach</option>
                            <option value='Park'>Park</option>
                            <option value='Zoo'>Zoo</option>
                            <option value='Nature'>Nature</option>
                            <option value='Sport'>Sport</option>
                            <option value='Venue'>Venue</option>
                            <option value='Statue'>Statue</option>
                            <option value='Historical'>Historical</option>
                            <option value='Religious'>Religious</option>
                        </select>
                        </div>
                        ​
                        <label for='photo' class="col-form-label form-control-label ml-2">Photo Link:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='photo' type='text' value='{{attraction.photo}}' name='photo'
                                required>
                        </div>
                        ​
                    </div>
                    ​
                    ​
                    <div class="form-group row">
                        ​
                        <label for='latitude'
                            class="col-lg-0.5 col-form-label form-control-label ml-4">Latitude:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='latitude' type='number' step='0.000001' value='{{latitude}}'
                                name='latitude' required>
                            <small>Accuracy for Latitude to the 0.000001</small>
                        </div>
                        ​
                        <label for='longitude' class="col-form-label form-control-label ml-2">Longitude:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='longitude' type='number' step='0.000001'
                                value='{{longitude}}' name='longitude' required>
                            <small>Accuracy for Longitude to the 0.000001</small>
                        </div>
                        ​
                        <label for='address' class="col-form-label form-control-label ml-2">Address:</label>
                        <div class="col-lg-3">
                            <input class="form-control" id='address' type='text' value='{{attraction.location.address}}'
                                name='address' required>
                        </div>
                    </div>
                    ​
                    <div class="form-group row">
                        ​
                        <label for='shortDescription' class="col-lg-3 col-form-label form-control-label ml-2">Short
                            Description:</label>
                        <div class="col-lg-7">
                            <textarea class="form-control" id='shortDescription' type='text' name='shortDescription'
                                required>{{attraction.location.shortDescription}}</textarea>
                        </div>
                        ​
                    </div>
                    ​
                    <div class="form-group row">
                        ​
                        <label for='longDescription' class="col-lg-3 col-form-label form-control-label ml-2">Long
                            Description:</label>
                        <div class="col-lg-7">
                            <textarea class="form-control" id='longDescription' type='text' name='longDescription'
                                required>{{attraction.location.longDescription}}</textarea>
                        </div>
                        ​
                    </div>
                    ​
                    ​
                    <div class="form-group row">
                        ​
                        <label class="col-lg-3 col-form-label form-control-label ml-2"></label>
                        <div class="col-lg-7">
                            <button class="button-update-att-data boxed-btn4">Save Changes</button>

                        </div>
                        ​
                    </div> ​
                </div>
            </form>
            <div class="column form-group w-100"> <!-- for showing the results of saving the attraction -->
                <label for='results'>Results:</label>
                <div id='results'
                    style='border-radius:10px; border:1px solid;background-color: white; min-height:100px'>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/attraction.js"></script> <!-- script to load in and edit the attraction -->
<script type="text/javascript"><!-- when page loads setting the aType scroll to be the original type -->
$(document).ready(function() {
    document.getElementById('aType').value = '{{attraction.aType}}';
});
</script>